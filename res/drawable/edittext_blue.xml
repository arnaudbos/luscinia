<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#DDDDDD"
                android:endColor="@color/background"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/blue" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/blue"
                android:endColor="@color/blue_dark"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/blue" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
    
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/blue"
                android:endColor="@color/blue_dark"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/blue" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#DDDDDD"
                android:endColor="@color/background"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/blue" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="0dp"
                android:right="10dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>